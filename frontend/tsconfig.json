{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@pages": ["@pages"],
      "@pages/*": ["@pages/*"],
      "@globalStyles/*": ["app/styles/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@widgets": ["widgets"],
      "@widgets/*": ["widgets/*"],
      "@features": ["features"],
      "@features/*": ["features/*"],
      "@entities": ["entities"],
      "@entities/*": ["entities/*"],
      "@providers": ["providers"],
      "@providers/*": ["providers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
